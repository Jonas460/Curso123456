@model WebApplication2.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>
<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Saller.Name"></label>
                <input asp-for="Saller.Name" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Saller.Email"></label>
                <input asp-for="Saller.Email" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Saller.BirthDate"></label>
                <input asp-for="Saller.BirthDate" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Saller.BaseSalary"></label>
                <input asp-for="Saller.BaseSalary" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Saller.DepartmentId" ></label>
                <select asp-for="Saller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"id", "Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>



